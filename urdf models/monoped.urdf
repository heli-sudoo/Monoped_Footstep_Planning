<?xml version="1.0" ?>
<robot name="monoped" xmlns:xacro="http://ros.org/wiki/xacro">

    <!--!!!!!!!!!!!!!!!!!!Fixed Base!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!-->
    </link name = "base">

    <!--!!!!!!!!!!!!!!!!!!Floating Body!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!-->

    <!--!!!!!!!!!!!Virtual Body!!!!!!!!!!!!!!!!!!!!!!!!-->
    </link name = "vbodyx">
    </link name = "vbodyz">

    <!--!!!!!!!!!!!Real Body!!!!!!!!!!!!!!!!!!!!!!!!-->
    <link name = "body">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="3.8"/>
            <inertia ixx="0"  ixy="0"  ixz="0" iyy=".1" iyz="0" izz="0" />
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="0.05 0.05 0.05" />
            </geometry>
            <material name="Cyan">
                <color rgba="0 1.0 1.0 1.0"/>
            </material>
        </visual>
    </link>

    <!--!!!!!!!!!!!!!!!!!!Upper Link!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!-->
    <link name = "upper_link">
        <inertial>
            <origin xyz="0 0 0.016" rpy="0 0 0"/>
            <mass value="1.782"/>
            <inertia ixx="0"  ixy="0"  ixz="0" iyy="0.05" iyz="0" izz="0" />
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.01" length="0.2" />
            </geometry>
            <material name="blue">
                <color rgba="0 0 1.0 1.0"/>
            </material>
        </visual>
    </link>
    <!--!!!!!!!!!!!!!!!!!!Lower Link!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!-->
    <link name = "lower_link">
        <inertial>
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
            <mass value="0.548"/>
            <inertia ixx="0"  ixy="0"  ixz="0" iyy="0.002" iyz="0" izz="0" />
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.01" length="0.2" />
            </geometry>
            <material name="green">
                <color rgba="0 1.0 0 1.0"/>
            </material>
        </visual>
    </link>

    <!--!!!!!!!!!!!!!!!!!!Floating Joint!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!-->
    <joint name = "transx" type="prismatic">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <parent link="base"/>
        <child link="vbodyx"/>
        <axis = "1 0 0">        
    </joint>

    <joint name = "transz" type="prismatic">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <parent link="vbodyx"/>
        <child link="vbodyz"/>
        <axis = "0 0 1">        
    </joint>

    <joint name = "pitch" type="revolute">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <parent link="vbodyz"/>
        <child link="body"/>
        <axis = "0 1 0">            
    </joint>

    <joint name = "hip" type="revolute">
        <origin xyz="0 0 0" rpy="0 1.1708 0"/>
        <parent link="body"/>
        <child link="upper_link"/>
        <axis = "0 1 0">            
    </joint>

    <joint name = "knee" type="revolute">
        <origin xyz="0 0 0.2" rpy="0 0 0"/>
        <parent link="upper_link"/>
        <child link="lower_link"/>
        <axis = "0 1 0">            
    </joint>
</robot>    
